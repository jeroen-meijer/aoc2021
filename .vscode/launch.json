    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'aoc2021'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=aoc2021", "--package=aoc2021"],
        "filter": {
          "name": "aoc2021",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole"
    }
  ]
